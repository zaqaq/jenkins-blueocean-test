pipeline {
  agent {
    node {
      label '10.16.0'
    }

  }
  stages {
    stage('Stage 1') {
      steps {
        echo 'Hello world!'
      }
    }

    stage('Stage 2') {
      steps {
        sh '''yarn install
yarn build:test
pm2 start yarn --name "my-nuxt" -- run:test'''
      }
    }

    stage('Stage 3 ') {
      steps {
        cleanWs(cleanWhenAborted: true, cleanWhenFailure: true, cleanWhenNotBuilt: true, cleanWhenSuccess: true, cleanWhenUnstable: true, cleanupMatrixParent: true, deleteDirs: true)
      }
    }

  }
}