pipeline {
  agent any
  stages {
    stage('Pull deploy code') {
      steps {
        echo 'success'
      }
    }

    stage('build now') {
      steps {
        sh '''yarn install
yarn build:test
tar -zcvf m-package.tar.gz .nuxt nuxt.config.js package.json assets
sudo mv m-package.tar.gz /home'''
      }
    }

    stage('stage 3') {
      steps {
        cleanWs(cleanWhenAborted: true, cleanWhenFailure: true, cleanWhenNotBuilt: true, cleanWhenSuccess: true, cleanWhenUnstable: true, cleanupMatrixParent: true, deleteDirs: true)
      }
    }

    stage('stage 4') {
      steps {
        sh '''cd /home
rm -rf .nuxt nuxt.config.js package.json assets node_modules yarn.lock
tar -xzvf m-package.tar.gz
rm -rf mvedeng-package.tar.gz
yarn install
pm2 restart 0'''
      }
    }

  }
}